{
  "name": "@plangs/server",
  "description": "Site server, for development and static site generation.",
  "version": "0.1.0",
  "dependencies": {
    "@plangs/definitions": "workspace:*",
    "@plangs/frontend": "workspace:*",
    "@plangs/plangs": "workspace:*",
    "marked": "^13.0.3",
    "preact": "^10.22.1",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "preact-render-to-string": "^6.5.6"
  },
  "scripts": {
    "bundle": "esbuild --bundle ../frontend/src/browse --sourcemap --outdir=static/ --watch",
    "css": "bun x @tailwindcss/cli@next -i src/input.css -o static/index.css",
    "csswatch": "bun x @tailwindcss/cli@next -i src/input.css -o static/index.css --watch",
    "serve": "bun run --hot src/serve.ts"
  }
}
