{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noBlankTarget": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noExplicitAny": "info"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 125
  },
  "javascript": {
    "formatter": {
      "bracketSameLine": true
    }
  }
}
