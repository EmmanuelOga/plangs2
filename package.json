{
  "name": "@plangs/project",
  "private": true,
  "workspaces": [
    "packages/*",
    "archived/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/cli": "^4.0.0-beta.6",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/bun": "latest",
    "@types/node": "latest",
    "esbuild": "^0.23.1",
    "tailwindcss": "^4.0.0-beta.6"
  },
  "peerDependencies": {
    "typescript": "5"
  },
  "scripts": {
    "js": "esbuild --bundle --define:ENV=\\\"dev\\\" packages/frontend/src/app --sourcemap --outdir=packages/server/static/bundle --watch",
    "css": "bun x @tailwindcss/cli@next -i ./styles.css -o packages/server/static/bundle/app.css --watch",
    "serve": "bun run --watch --cwd $(pwd)/packages/server src/serve.ts",
    "genjs": "esbuild --bundle --define:ENV=\\\"prod\\\" packages/frontend/src/app --sourcemap --outdir=$HOME/dev/plangs-out/bundle",
    "genapp": "bun packages/server/src/generators/site.ts $HOME/dev/plangs-out",
    "genjson": "bun packages/server/src/generators/json.ts .",
    "gengraph": "bun run --watch packages/server/src/generators/graph.ts"
  }
}