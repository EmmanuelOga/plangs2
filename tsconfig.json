{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "types": [
            "bun-types"
        ],
        // Preact stuff.
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}